<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luminous.luminescent.celebrity">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/listener_splash"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
<activity
            android:name="com.luminous.luminescent.sparse.VOLocalActivity"
            android:screenOrientation="portrait" />

<activity
            android:name="com.luminous.luminescent.sparse.KHPlayerColorsActivity"
            android:screenOrientation="portrait" />

<activity
            android:name="com.luminous.luminescent.sparse.MGBackgroundImageActivity"
            android:screenOrientation="portrait" />

<activity
            android:name="com.luminous.luminescent.sparse.XKStylesBackgroundActivity"
            android:screenOrientation="portrait" />

<activity
            android:name="com.luminous.luminescent.sparse.OGEElementFrameActivity"
            android:screenOrientation="portrait" />

<activity
            android:name="com.luminous.luminescent.sparse.ELayoutEditActivity"
            android:screenOrientation="portrait" />

<activity
            android:name="com.luminous.luminescent.sparse.FWEditActivity"
            android:screenOrientation="portrait" />
<activity
            android:name=".HUHMainSettingsActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SCWSplashActivity"></activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/g_example_grid"></meta-data>
        </provider>
    </application>

</manifest>